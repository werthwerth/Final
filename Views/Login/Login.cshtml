@{
    ViewData["Title"] = "Register Page";
}

@model LoginModel

@section Header {
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Final</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
            <ul class="navbar-nav flex-grow-1 justify-content-end">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="@Model.RegisterButtonController" asp-action="@Model.RegisterButtonAction">@Model.RegisterButtonName</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="@Model.LoginButtonController" asp-action="@Model.LoginButtonAction">@Model.LoginButtonName</a>
                </li>
            </ul>
        </div>
    </div>
}


<div class="text-center">
    <h1 class="display-4">Welcome to test-O!</h1>
    <p>Test-O!</p>
    <form id="registerForm" method="post">
        <label>Логин:</label><br />
        <input type="text" name="login" id="login" /><br /><br />
        <label>Пароль:</label><br />
        <input type="password" name="password" id="password" /><br /><br />
        <input type="submit" value="Отправить" />
    </form>
</div>
